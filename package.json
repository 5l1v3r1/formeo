{
  "name": "formeo",
  "version": "0.7.17",
  "main": "dist/formeo.min.js",
  "files": [
    "dist/formeo.min.js"
  ],
  "homepage": "https://formeo.io",
  "repository": {
    "url": "http://github.com/draggable/formeo",
    "type": "git"
  },
  "author": "Draggable https://draggable.io",
  "contributors": [
    {
      "name": "Kevin Chappell",
      "email": "kevin.b.chappell@gmail.com",
      "url": "https://kevin-chappell.com"
    }
  ],
  "bugs": {
    "url": "https://github.com/draggable/formeo/issues"
  },
  "description": "A zero dependency JavaScript module for drag and drop form creation.",
  "keywords": [
    "drag and drop",
    "form builder",
    "form maker",
    "forms"
  ],
  "license": "MIT",
  "ignore": [
    "**/*",
    "node_modules",
    "test"
  ],
  "config": {
    "files": {
      "test": [
        "test/**/*.spec.js"
      ],
      "formeo": {
        "js": "./src/js/formeo.js",
        "icons": "src/icons/**/*.svg",
        "fonts": "src/fonts/fontello",
        "lang": "src/lang",
        "sass": [
          "src/sass/formeo.scss",
          "src/sass/_render.scss"
        ]
      },
      "site": [
        "demo/assets/sass/site.scss"
      ]
    },
    "fontServer": "http://fontello.com"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              ">1%"
            ]
          },
          "include": [
            "es6.promise",
            "es6.object.assign"
          ],
          "loose": true,
          "modules": false
        }
      ]
    ],
    "comments": false,
    "plugins": [
      "transform-object-rest-spread",
      "transform-class-properties"
    ]
  },
  "scripts": {
    "analyze": "webpack --json | webpack-bundle-size-analyzer",
    "icons": ". ./tools/build-icons.sh",
    "clean": "rm -rf dist/*",
    "build": "npm run clean && webpack -p --progress && npm run copy",
    "lang": "cp -a src/lang demo/assets && cp -a src/lang dist",
    "copy": "npm run icons && npm run lang && cp demo/assets/formeo.min* dist",
    "lint": "eslint ./src/js --ext .js || true",
    "test": "mocha --compilers js:babel-register && webpack -p --bail",
    "start": "webpack-dev-server",
    "tag": "node ./node_modules/babel-cli/bin/babel-node.js -- tools/run tag",
    "release:patch": "npm run tag patch && npm run deploy",
    "release:minor": "npm run tag minor && npm run deploy",
    "deploy": "git push upstream $(git subtree split --prefix demo master):gh-pages --force"
  },
  "devDependencies": {
    "autoprefixer": "^8.4.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-regenerator-runtime": "^6.5.0",
    "chai": "^4.1.2",
    "clean-webpack-plugin": "^0.1.19",
    "compression-webpack-plugin": "^1.1.11",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-css-modules": "^2.7.5",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "immutable": "^3.8.2",
    "json-update": "^3.0.0",
    "mi18n": "^0.3.5",
    "mocha": "^5.1.1",
    "node-sass": "^4.9.0",
    "postcss-loader": "^2.1.4",
    "replace-in-file": "^3.4.0",
    "sass-loader": "^7.0.1",
    "semver": "^5.5.0",
    "sortablejs": "1.4.2",
    "style-loader": "^0.21.0",
    "svg-sprite": "^1.4.0",
    "uuid-v4": "^0.1.0",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15",
    "webpack-dev-server": "^3.1.3"
  },
  "engines": {},
  "dependencies": {},
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended",
      "standard",
      "prettier"
    ],
    "plugins": [
      "standard",
      "prettier"
    ],
    "rules": {
      "no-console": 0,
      "no-debugger": 0,
      "prefer-const": [
        1,
        {
          "destructuring": "any",
          "ignoreReadBeforeAssign": false
        }
      ]
    }
  }
}
